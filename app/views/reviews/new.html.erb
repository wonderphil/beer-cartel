<% provide(:title, 'Write a Review') %>
<div class="boxed">
	<h1>Add a review</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= form_for([@beer, @review]) do |f| %>
	      <%= render 'fields', f: f %>

	      <%= f.submit "Submit Review!", class: "btn btn-primary" %>
	      <%= link_to 'Cancel', beer_path(@beer), class: "btn btn-danger" %>
	    <% end %>
	  </div>
	</div>
</div>