<% provide(:title, @user.first_name) %>
<div class="boxed">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
            <%= gravatar_for @user %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'stats' %>
      </section>
    </aside>
    <div class="col-md-8">
    	<% if @user.reviews.any? %>
    		<%= render "user_reviews" %>
    	<% end %>
    </div>
  </div>
</div>