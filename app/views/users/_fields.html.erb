<%= render 'shared/error_messages', object: f.object %>

<fieldset>
	<i>* must have</i>
	<legend>User Details</legend>

	<%= f.label :first_name, "First Name *" %>
	<%= f.text_field :first_name, class: 'form-control' %>

	<%= f.label :middle_name, "Middle Name" %>
	<%= f.text_field :middle_name, class: 'form-control' %>

	<%= f.label :last_name, "Last Name *" %>
	<%= f.text_field :last_name, class: 'form-control' %>

	<%= f.label :favourite, "Favourite Beer *" %>
	<%= f.text_field :favourite, class: 'form-control' %>	
</fieldset>

<fieldset>
	<legend>Contact Details</legend>

	<%= f.label :email, "Email *" %>
	<%= f.email_field :email, class: 'form-control' %>

	<%= f.label :address1, "Address" %>
	<%= f.text_field :address1, class: 'form-control' %>

	<%= f.label :address2, "Address line 2" %>
	<%= f.text_field :address2, class: 'form-control' %>

	<%= f.label :city %>
	<%= f.text_field :city, class: 'form-control' %>

	<%= f.label :state %>
	<%= f.text_field :state, class: 'form-control' %>

	<%= f.label :postcode %>
	<%= f.number_field :postcode, class: 'form-control' %>

	<%= f.label :country %>
	<%= f.country_select :country, class: 'form-control ', priority_countries: ["AU", "GB", "US"]  %>

</fieldset>

<fieldset>
	<legend>Password Details</legend>
	<%= f.label :password, "Password *" %>
	<%= f.password_field :password, class: 'form-control' %>

	<%= f.label :password_confirmation, "Confirmation *" %>
	<%= f.password_field :password_confirmation, class: 'form-control' %>

</fieldset>